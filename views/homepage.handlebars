<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 posts">
    <div class="col-md-5">
        <div class="title">
        <h2>
            {{post.title}}
        </h2>
        </div>
        <p>
            <span class="post-content">{{post.cont}}</span>
        </p>
        <p>Posted by {{post.postedBy}} on {{post.postedOn}}</p>
    </div>

    {{#if comments}}
    <div class="col-md-7">
        {{> comments-details}}
    </div>
    {{/if}}

    <button class="btn btn-primary" id="new-comment" href="/api/comments/">Add new comment</button>
</div>
{{/each}}

<script src="/js/comments.js"></script>